<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="margretcraft.homeplants">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/violeticon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/violeticon"
        android:supportsRtl="true"
        android:theme="@style/Theme.HomePlants">
        <activity
            android:name=".ItemListActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.HomePlants.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName=".ItemListActivity"
            android:theme="@style/Theme.HomePlants.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="margretcraft.homeplants.ItemListActivity" />
        </activity>
    </application>

</manifest>